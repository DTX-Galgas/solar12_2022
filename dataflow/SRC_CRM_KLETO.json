{
	"name": "SRC_CRM_KLETO",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "AQR_BRONZE_CRM_KLETO",
						"type": "DatasetReference"
					},
					"name": "SrcCrmKleto"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "PQ_SILVER_CRM_KLETO",
						"type": "DatasetReference"
					},
					"name": "OutputCrmPQ"
				},
				{
					"dataset": {
						"referenceName": "ARQ_SILVER_CRM_KLETO",
						"type": "DatasetReference"
					},
					"name": "OutputCrmARQ"
				}
			],
			"transformations": [
				{
					"name": "SelectColumnCRM"
				},
				{
					"name": "SplitCRM"
				}
			],
			"scriptLines": [
				"source(output(",
				"          id as string,",
				"          primeiro_nome as string,",
				"          ultimo_nome as string,",
				"          email as string,",
				"          sexo as string,",
				"          cidade as string,",
				"          pais as string,",
				"          codigo_pais as string,",
				"          Time_zone as string,",
				"          empresa as string,",
				"          profissao as string,",
				"          etnia as string,",
				"          idioma as string,",
				"          montadora as string,",
				"          carro as string,",
				"          ano as string,",
				"          nascimento as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> SrcCrmKleto",
				"SrcCrmKleto select(mapColumn(",
				"          id,",
				"          primeiro_nome,",
				"          ultimo_nome,",
				"          email,",
				"          sexo,",
				"          cidade,",
				"          pais,",
				"          codigo_pais,",
				"          Time_zone,",
				"          empresa,",
				"          profissao,",
				"          idioma,",
				"          montadora,",
				"          carro,",
				"          ano,",
				"          nascimento",
				"     ),",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> SelectColumnCRM",
				"SelectColumnCRM split(toInteger(ano) <= 1970,",
				"     toInteger(ano) > 1970,",
				"     disjoint: false) ~> SplitCRM@(Ate1970, Apos1970)",
				"SplitCRM@Ate1970 sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     format: 'parquet',",
				"     partitionFileNames:['PQ_CRM'],",
				"     umask: 0022,",
				"     preCommands: [],",
				"     postCommands: [],",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> OutputCrmPQ",
				"SplitCRM@Apos1970 sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     partitionFileNames:['ARQ_CRM'],",
				"     umask: 0022,",
				"     preCommands: [],",
				"     postCommands: [],",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> OutputCrmARQ"
			]
		}
	}
}